@model LabAspMvc.ViewModels.PhonesNCommetsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Phone</h4>
    <hr />
    <div><a asp-action="Edit" asp-controller="Phones" asp-route-id="@Model.Phone.Id">Edit</a> </div>
    <div class="w-25 h-25"><img src="@Model.Phone.Pic"/></div>
    <dl class="row">

       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone.Price)
        </dd> 
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Categories)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone.Categories.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone.Brand.Id)
        </dd>

        
    </dl>
</div>
<div>
    <a asp-action="Create" asp-controller="Comments"  >Add Comment </a>
</div>
<div>
    <a asp-action="Edit" asp-controller="Phones" asp-route-id="@Model.Phone.Id">Edit</a> |
    <a asp-action="Index" asp-controller="Phones">Back to List</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                 Comment Name
            </th>
            <th>
                 Comment  Discripton
            </th>
            <th>
                Comments Rating
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comments) {
    @if(@Model.Phone.Id==item.PhoneId){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discripton)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
        </tr>
}}
    </tbody>
</table>
